<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shivansh.attendance.TodoDetailFragment"
    tools:showIn="@layout/activity_todo_detail">
  <ScrollView
      android:layout_width="match_parent"
      android:padding="20dp"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/detail_task"
              android:text="TASK to be comleted jjdbbjhbjdabjbadjb"
              android:textColor="@color/green"
              android:textSize="30sp"
              android:padding="20dp"
              android:layout_gravity="center"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red"
                  android:layout_weight="1"
                  android:text="PRIORITY"
                  android:textSize="30sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:gravity="right"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:textColor="@color/red"
                  android:text="DEADLINE"
                  android:textSize="30sp"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/detail_priority"
                  android:textColor="@color/black"
                  android:layout_weight="1"
                  android:text="PRIORITY"
                  android:textSize="15sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="right"
                  android:textColor="@color/black"
                  android:id="@+id/detail_deadline"
                  android:text="DEADLINE"
                  android:textSize="15sp"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="30sp"
              android:textColor="@color/blue"
              android:padding="20dp"
              android:layout_gravity="center"
              android:text="Description : "/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/detail_description"
              android:textColor="@color/black"
              android:padding="5dp"
              android:text="Hello, this is a very useful todo list app, which is under construction."/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="25dp"
              android:orientation="horizontal">
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_edit"
                 android:text="EDIT THE TASK"/>
              <Button
                  android:layout_width="wrap_content"
                  android:id="@+id/button_delete"
                  android:layout_height="wrap_content"
                  android:text="DELETE THE TASK"/>
          </LinearLayout>
      </LinearLayout>

  </ScrollView>

</android.support.constraint.ConstraintLayout>
